/* doctlist.wxss */
view,scroll-view,swiper,navigator,button{box-sizing: border-box;}
page{background-color: #f5f5f5;font-size: 24rpx;color: #333;}
image{width: 100%;display:block;}
.clear::after{content: ""; clear:both;display: block; width: 0;height: 0;}
@media (min-width: 1024px){
  page{font-size: 24rpx;max-width: 1024px;margin: auto;}
}
button{border-radius:unset; border: unset;margin:0;padding:0;background:unset;}
button::after{border: unset;}
.doct_nav{width: 100%;height: 100rpx;line-height: 100rpx;padding: 0 3.333%;background-color:#fff;position: relative;}
.doct_nav_scroll{white-space:nowrap;display:flex;font-size:30rpx;}
.doct_nav_scroll view{display:inline-block;width: max-content;height: 96rpx;line-height: 96rpx; margin-right: 15rpx; letter-spacing: 3rpx;padding: 0 5rpx;}
.doct_nav_scroll view.current{border-bottom: #b0875b 4rpx solid;color:#b0875b;}

.doctlist{width: 100%;margin: 10rpx auto;}
.doct_li{width: 100%;padding:20rpx 4%;background-color: #fff; margin: 10rpx auto 5rpx;float: left;}
.doct_li .hospital{width:100%;padding:15rpx 0;}
.doct_li .hospital .hospital_face{width:90rpx;height:90rpx;border-radius: 50%;overflow:hidden;float: left;margin:10rpx 0;} 
.doct_li .hospital .hospital_face>image{
  width: 100%;
  height: 100%;
}
.doct_li .hospital .hospital_info{
  width: 85%;
  float: right;
  position: relative;
}
.doct_li .hospital .hospital_info .doctor_title{font-size:30rpx;color:#000;margin-top:5rpx;}
.doct_li .hospital .hospital_info .hospital_address{font-size:24rpx;color:#b0875b;margin-top:20rpx;}
.doct_li .hospital .hospital_info .hospital_address icon{width:40rpx;height:40rpx;vertical-align:middle;margin-top:-5rpx;}
.doct_li .hospital .hospital_info .btn_tel{width:180rpx;height:60rpx;line-height:60rpx;background-color:#7a0711;color:#fff;text-align:center;font-size:26rpx;border-radius:10rpx;
  position: absolute;
  top: 15rpx;
  right: 0;
}
.doct_li .hospital .hospital_info .btn_tel icon{width:50rpx;height:40rpx;vertical-align:middle;margin-top:-5rpx;background-size:auto 80%;}
.doct_li .doctor_card{width:100%;padding:20rpx 0;border-bottom:1px solid #c6c6c6;}
.doct_li .doctor_btn{width:100%;padding-top:20rpx;display:flex;justify-content:space-between;flex-wrap:wrap;}
.doct_li .doctor_btn .btn{width:33.333%;height:40rpx;line-height:40rpx; text-align:center;border-right:#c6c6c6 solid 1rpx;color:#555555;}
.doct_li .doctor_btn .btn text{color:#b0875b;}
.doct_li .doctor_btn .btn:last-child{border:unset;}
.doct_li .doctor_btn icon{width:40rpx;height:40rpx;vertical-align:middle;margin-top:-5rpx;}
.showNull{
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 100rpx;
}
.showNull>image{
  width: 30%;
}
.showNull>text{
  font-size: 28rpx;
  margin-top: 20rpx;
}
.isButtom{
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.isButtom>text{
  font-size: 10pt;
  color: #888888;
}
/* 暂无数据 */
.isNull{
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}
.isNull>text:first-of-type{
  font-size: 26pt;
  color: #999999;
}
.isNull>text:last-of-type{
  font-size: 10pt;
  color: #666666;
  margin-top: 20rpx;
}
