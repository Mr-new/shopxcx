/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}
/* 顶部部分 */
.header{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.header>view:first-of-type{
  width: 94%;
  padding: 30rpx 3%;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}
.header>view:first-of-type>text:first-of-type{
  font-size: 11pt;
  color: #333333;
}
.header>view:first-of-type>text:last-of-type{
  font-size: 11pt;
  color: #CF4B38;
}
.header>view:nth-of-type(2){
  width: 100%;
  height: 130rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.header>view:nth-of-type(2)>view:first-of-type{
  width: 18%;
  height: 100rpx;
  background-color: #ED7374;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header>view:nth-of-type(2)>view:first-of-type>text{
  font-size: 11pt;
  color: #ffffff;
}
.header>view:nth-of-type(2)>view:last-of-type{
  width: 80%;
  display: flex;
  flex-direction: column;
}
.header>view:nth-of-type(2)>view:last-of-type>text{
  font-size: 11pt;
  color: #333333;
}
.header>view:nth-of-type(2)>view:last-of-type>text:last-of-type{
  margin-top: 10rpx;
  color: #666666;
  font-size: 10pt;
}
.header>view:nth-of-type(3){
  width: 100%;
  padding: 20rpx 0;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 20rpx 0;
}
.header>view:nth-of-type(3)>view{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.header>view:nth-of-type(3)>view:first-of-type{
  border-right: 1rpx solid #EEEEEE;
}
.header>view:nth-of-type(3)>view>text:first-of-type{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  border-radius: 50%;
  background-color: #EB5656;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
  color: #ffffff;
  margin-right: 30rpx;
}
.header>view:nth-of-type(3)>view:last-of-type>text:first-of-type{
  background-color: #ED762E;
}
.header>view:nth-of-type(3)>view>text:last-of-type{
  font-size: 11pt;
  color: #333333;
}
/* 商品详细及价格部分 */
.content{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.shop{
  width: 94%;
  padding: 20rpx 3%;
  
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}
.shop>image{
  width: 20%;
}
.shop>view:first-of-type{
  width: 60%;
  display: flex;
  flex-direction: column;
}
.shop>view:first-of-type>text:first-of-type{
  font-size: 11pt;
  color: #333333;
}
.shop>view:first-of-type>text:last-of-type{
  font-size: 10pt;
  color: #999999;
  margin-top: 15rpx;
}
.shop>view:last-of-type{
  width: 17%;
  display: flex;
  flex-direction: column;
  text-align: right;
}
.shop>view:last-of-type>text:first-of-type{
  font-size: 10pt;
  color: #9A9A9A;
}
.shop>view:last-of-type>view{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-top: 50rpx;
}
.shop>view:last-of-type>view>text:first-of-type{
  color: #A3A3A3;
  font-size: 10pt;
}
.shop>view:last-of-type>view>text:last-of-type{
  font-size: 11pt;
  color: #EB5656;
  margin-top: 15rpx;
}
.price{
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #ffffff;
}
.price>view{
  width: 94%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #EEEEEE;
  border-top: 2rpx solid #F5F5F5;
}
.price>view>text:first-of-type{
  font-size: 11pt;
  color: #404040;
  margin: 10rpx 0 20rpx;
  display: block;
}
.price>view>view{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}
.price>view>view>text:first-of-type{
  font-size: 11pt;
  color: #999999;
}
.price>view>view>text:last-of-type{
  font-size: 11pt;
  color: #EB5656;
}
.remarks{
  width: 94%;
  padding: 20rpx 3%;
  background-color: #ffffff;
}
.remarks>view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  line-height: 70rpx;
}
.remarks>view>text:first-of-type{
  display: block;
  width: 130rpx;
  font-size: 11pt;
  color: #959595;
  text-align: right;
}
.remarks>view>text:last-of-type{
  width: 80%;
  display: block;
  font-size: 11pt;
  color: #959595;
  text-overflow:ellipsis;
  word-wrap:break-word;
}