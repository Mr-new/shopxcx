/**index.wxss**/
page{
  width: 100%;
  height: 100%;
   background-color: #F3F4F8;
}
.list{
  width: 92%;
  margin: 0 4%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.item{
  width: 48%;
  margin: 15rpx 0;
  height: auto;
  overflow: hidden;
  background-color: #ffffff;
  border-radius: 15rpx;
}
.item:nth-of-type(odd){
  margin-right: 4%;
}
.item>view:first-of-type{
  width: 100%;
  max-height: 175px;
  overflow: hidden;
}
.item>view:first-of-type>image{
  width: 100%;
}
.item>view:last-of-type{
  width: 90%;
  margin: 0 auto;
  padding: 10rpx 0;
}
.item>view:last-of-type>text{
  font-size: 10pt;
  color: #333333;
}
.item>view:last-of-type>view{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.item>view:last-of-type>view>text{
  font-size: 11pt;
  color: #DE0814;
}
.item>view:last-of-type>view>view{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5rpx 15rpx;
  border: 2rpx solid #E9783D;
  border-radius: 30rpx;
}
.item>view:last-of-type>view>view>text{
  font-size: 12pt;
  color: #E9783D;
}
/* 到底了 */
.isButtom{
  margin-bottom: 20rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.isButtom>text{
  font-size: 10pt;
  color: #888888;
}
/* 暂无数据 */
.isNull{
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}
.isNull>text:first-of-type{
  font-size: 26pt;
  color: #999999;
}
.isNull>text:last-of-type{
  font-size: 10pt;
  color: #666666;
  margin-top: 20rpx;
}