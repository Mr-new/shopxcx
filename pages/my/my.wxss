/**index.wxss**/
page{
  background-color: #F5F5F5;
}
.header{
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #7D2CDC;
}
.header_content{
  width: 92%;
  margin: 30rpx 4% 80rpx;
  height: auto;
  overflow: hidden;
  background-color: #9554E2;
  border-radius: 20rpx;
  border: 2rpx solid #AA76E7;
}
.header_content>view:first-of-type{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  margin: 20rpx 0 0 20rpx;
}
.header_content>view:first-of-type>image{
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #BE98ED;
  border-radius: 50%;
  margin-right: 10rpx;
}
.header_content>view:first-of-type>text{
  font-size: 10pt;
  color: #ffffff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2rpx solid #BE98ED;
}
.userinfo-nickname {
  font-size: 11pt;
  color: #FFFFFF;
  margin-bottom: 10rpx;
}

.userinfo>text:last-of-type{
  font-size: 10pt;
  color: #D4BAF2;
}
.content{
  width: 92%;
  padding: 0 4%;
}
.item1{
  width: 94%;
  padding: 0 3%;
  height: 100rpx;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  transform: translateY(-50rpx);
}
.item1>text{
  font-size: 10pt;
  color: #333333;
  height: 24rpx;
  width: 18%;
  border-right: 2rpx solid #E6E6E6;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item1>view{
  width: 100rpx;
  height: 46rpx;
  border: 2rpx solid #E9783D;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item1>view>text{
  font-size: 10pt;
  color: #E9783D;
}
.item2{
  width: 100%;
  height: auto;
  overflow: hidden;
  border-radius: 20rpx;
  background-color: #FFFFFF;
}
.mt25{
  transform: translateY(-25rpx)
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 94%;
  padding: 0 3%;
  height: 80rpx;
  border-bottom: 2rpx solid #F5F5F5;
}
.title>text:first-of-type{
  font-size: 11pt;
  color: #333333;
}
.title>text:nth-of-type(2){
  font-size: 10pt;
  color: #666666;
}
.my_menu{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: space-between;
}
.my_menu>navigator{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.my_menu>navigator>image{
  width: 30%;
  margin-bottom: 15rpx;
}
.my_menu>navigator>text{
  font-size: 10pt;
  color: #333333
}
.null{
  width: 100%;
  height: 150rpx;
}