/**index.wxss**/
page{
  background-color: #F5F5F5;
}
.header{
  width: 92%;
  margin: 85rpx auto 50rpx;
  height: 350rpx;
  background-color: #B2000B;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header_content{
  width: 200rpx;
  position: absolute;
  top: -80rpx;
  left: 10rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #FFFFFF;
}
.userinfo-nickname {
  font-size: 11pt;
  color: #FFFFFF;
  margin-bottom: 10rpx;
}

.header_bottom{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 130rpx;
}
.header_bottom>view{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.header_bottom>view>text{
  color: #FFFFFF;
}
.header_bottom>view>text:first-of-type{
  font-size: 15pt;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.header_bottom>view>text:last-of-type{
  font-size: 10pt;
}

/* .userinfo>text:last-of-type{
  font-size: 10pt;
  color: #D4BAF2;
} */
.content{
  width: 92%;
  padding: 0 4%;
}
.item1{
  width: 94%;
  padding: 0 3%;
  height: 100rpx;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  transform: translateY(-50rpx);
}
.item1>view:first-of-type{
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.item1>view:first-of-type>text{
  font-size: 10pt;
  color: #333333;
  height: 24rpx;
  /* width: 50%; */
  display: flex;
  align-items: center;
}
.item1>view:first-of-type>text:first-of-type{
  border-right: 2rpx solid #E6E6E6;
  padding-right: 15rpx;
}
.item1>view:first-of-type>text:nth-of-type(2){
  padding-left: 15rpx;
}
.item1>view:last-of-type{
  width: 100rpx;
  height: 46rpx;
  border: 2rpx solid #E9783D;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item1>view:last-of-type>text{
  font-size: 10pt;
  color: #E9783D;
}
.item2{
  width: 100%;
  height: auto;
  overflow: hidden;
  border-radius: 20rpx;
  background-color: #FFFFFF;
}
.mt25{
  transform: translateY(-25rpx)
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 94%;
  padding: 0 3%;
  height: 80rpx;
  border-bottom: 2rpx solid #F5F5F5;
}
.title>text:first-of-type{
  font-size: 11pt;
  color: #333333;
}
.title>text:nth-of-type(2){
  font-size: 10pt;
  color: #666666;
}
.my_menu{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: flex-start;
}
.my_menu>navigator{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.my_menu>navigator>image{
  width: 30%;
  margin-bottom: 15rpx;
}
.my_menu>navigator>text{
  font-size: 10pt;
  color: #333333
}
.null{
  width: 100%;
  height: 150rpx;
}
.loginBtn{
  margin-top: 130rpx;
  background-color: #FD5689;
  width: 150rpx;
  height: 70rpx;
  font-size: 11pt;
  color: #FFFFFF;
  line-height: 70rpx;
  text-align: center;

}
.loginBtn::after{
  margin: 0;
  padding: 0;
  border: none;
}