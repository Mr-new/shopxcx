/**index.wxss**/
.container{
  width: 100%;
}
.title{
  width: 94%;
  padding: 20rpx 3%;
  border-bottom: 2rpx solid #F8F8F8;

}
.title>text{
  font-size: 13pt;
  color: #333333;
  font-weight: bold;
}
.content{
  width: 94%;
  padding: 30rpx 3%;
  display: flex;
  flex-direction: column;
}
.content>view:first-of-type{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
}
.content>view:first-of-type>image{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.content>view:first-of-type>text{
  font-size: 11pt;
  color: #454545;
}
.content>view:nth-of-type(2){
  width: 100%;
}
.content>view:nth-of-type(2)>text{
  font-size: 12pt;
  color: #393939;
}
.fixed{
  width: 100%;
  height: 100rpx;
  background-color: #F85D67;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixed>button{
  background-color: transparent;
  font-size: 13pt;
  color: #ffffff;
}
button::after{
  border: none;
  background-color: transparent;
}
.share{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 10rpx;
  bottom: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
 
}
.share>button{
  margin: 0;
  padding: 0;
  line-height: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
   background-color: transparent !important;
}
.share>button::after{
  border: none;
}
.share>button>image{
  width: 100%;
}
.share>button>text{
  font-size: 11pt;
}