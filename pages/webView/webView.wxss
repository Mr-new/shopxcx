/**index.wxss**/
.container{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.item{
  width: 100%;
  height: auto;
  overflow: hidden;
  position: relative;
  display: block;
}
.item>image{
  display: block;
  width: 100%;
}
.item>button{
  background-color: transparent;
  margin: 0;
  padding: 0;
  position: absolute;
  bottom: 50rpx;
  right: 40rpx;
  width: 40%;
  animation: sc 1.2s linear infinite;
}
.item>button>image{
  display: block;
  width: 100%;
}
button::after{
  border: none;
  outline: none;
}
@keyframes sc{
  0%{
    transform: scale(1)
  }
  50%{
    transform: scale(1.1)
  }
  100%{
    transform: scale(1)
  }
}