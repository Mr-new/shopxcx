<!--index.wxml-->
<view class="container">
  <swiper class='swiper' indicator-dots="{{indicatorDots}}" 
        autoplay="{{autoplay}}" indicator-active-color='#ffffff' indicator-color='rgba(255,255,255,0.5)' interval="{{interval}}" duration="{{duration}}" circular="true"> 
      <block wx:for="{{arr}}" wx:key="index"> 
        <swiper-item> 
            <image src="{{item.src}}" class="slide-image" mode='widthFix' /> 
        </swiper-item> 
      </block>
  </swiper>
  <view class='menu'>
    <block wx:for="{{menuList}}" wx:key="index">
      <navigator  data-lng="{{item.id==4 ? HospitalMsg.location.lng : ''}}" data-lat="{{item.id==4 ? HospitalMsg.location.lat : ''}}" bindtap="{{item.id==4 ? 'goMap' : ''}}">
        <image src="{{item.src}}" mode="widthFix"></image>
        <text style="color:{{item.fontColor}}">{{item.title}}</text>
        <text style="color:{{item.fontColor}}">{{item.englishTitle}}</text>
      </navigator>
    </block>
  </view>
  <view class='content'>
    <view class='top'>
      <navigator>
        <image mode='widthFix' src='http://xaxcx.17mall.cc/Public/uploadImages/default/huodong_02.png'></image>
      </navigator>
      <view>
        <text>AAAAA级医疗美容医院</text>
        <view>
          <block wx:for="{{details}}" wx:key="index">
            <navigator>
              <image src='{{item.src}}' mode='widthFix'></image>
            </navigator>
          </block>
        </view>
      </view>
    </view>
    <view class='bottom'>
      <view class='header'>
        <text>21周年庆爆品</text>
        <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/xing.png' mode='widthFix'></image>
      </view>
      <view class='list'> 
        <block wx:for="{{baopin}}" wx:key="index">
          <navigator url='/pages/shopDetails/shopDetails'>
            <image src='{{item.src}}' mode='widthFix'></image>
            <view>
              <text>{{item.bigTitle}}</text>
              <text>{{item.smallTitle}}</text>
            </view>
            <view>
              <view>
                ￥<text>{{item.price}}</text>元
              </view>
              <text>立即购买</text>
            </view>
          </navigator>
        </block>
        <view class='more'>
          <navigator>
            <text>查看更多 ></text>
          </navigator>
        </view>
      </view>
    </view>
  </view>
  <view class='case'>
    <view class='title'>
      <view>
        <text>日记</text>
      </view>
    </view>
    <view class='caseMenu'>
      <block wx:for="{{caseMenu}}" wx:key="index">
        <navigator>
          <image src='{{item.src}}' mode='widthFix'></image>
          <text>{{item.title}}</text>
        </navigator>
      </block>
    </view>
    <view class='caseList'>
      <block wx:for="{{caseList}}" wx:key="index">
        <navigator>
          <view class='caseList_top'>
            <view>
              <image src='{{item.pic}}'></image>
              <text>{{item.name}}</text>
            </view>
            <view>
              <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/case_image_03.png' mode='widthFix'></image>
              <text>查看日记</text>
            </view>
          </view>
          <view class='imgList'>
            <block wx:for="{{item.imgList}}" wx:key="index">
              <image src='{{item.imgUrl}}' mode='widthFix'></image>
            </block>
          </view>
          <view class='details'>
            <view>
              <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/case_image_16.png' mode='widthFix'></image>
              <text>{{item.product}}</text>
            </view>
            <view>
              <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/case_image_19.png' mode='widthFix'></image>
              <text>主治医生：{{item.doctor}}</text>
            </view>
            <view>
              <text>{{item.productName}}</text>
              <view>
                <text>￥{{item.price}}</text>
                <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/addCart_03.png' mode='widthFix'></image>
              </view>
            </view>
          </view>
        </navigator>
      </block>
      <view class='showMore'>
        <text decode="{{true}}">查看更多&nbsp;&nbsp;></text>
      </view>
    </view>
  </view>
  <view class='footer'>
    <view>
      <view class='topTitle'>
        <view>
          <text>艺星团队</text>
        </view>
      </view>
      <view>
        <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/hospital_02.png' mode='widthFix'></image>
        <text>立即预约 ></text>
      </view>
    </view>
    <view class='footer_bottom'>
      <view>
        <view class='topTitle'>
          <view>
            <text>亚洲连锁</text>
          </view>
        </view>
        <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/hospital_04.png' mode='widthFix'></image>
      </view>
      <view>
        <view class='topTitle'>
          <view>
            <text>西安艺星</text>
          </view>
        </view>
        <view>
          <view>
            <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/hospital_07.png' mode='widthFix'></image>
            <text>营业时间： {{HospitalMsg.dateTime}}</text>
          </view>
          <view>
            <image  bindtap='goMap' src='http://xaxcx.17mall.cc/Public/uploadImages/default/hospital_10.png' mode='widthFix'></image>
            <text>地址： {{HospitalMsg.address}}</text>
          </view>
          <view bindtap='goTel' data-tel="{{HospitalMsg.tel}}">
            <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/hospital_12.png' mode='widthFix'></image>
            <text>点击拨打电话： {{HospitalMsg.tel}}</text>
          </view>
          <view bindtap='goMap' data-lng='{{HospitalMsg.location.lng}}' data-lat='{{HospitalMsg.location.lat}}'>
            <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/hospital_14.png' mode='widthFix'></image>
            <text>点击导航到院</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="rightMenu" style="right:{{rightMenuShow ? '0' : '-80rpx'}}">
    <view bindtap='hideRightMenu'>
      <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/icon_03.png' mode='widthFix'></image>
    </view>
    <view>
      <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/icon_06.png' mode='widthFix'></image>
    </view>
    <view bindtap='goTel' data-tel="{{HospitalMsg.tel}}">
      <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/icon_08.png' mode='widthFix'></image>
    </view>
    <view class='line'></view>
    <button open-type="contact">
       <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/icon_10.png' mode='widthFix'></image>
    </button>
    <view bindtap='goTop'>
      <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/icon_top.png' mode='widthFix'></image>
    </view>
    <view class='line'></view>
    <view bindtap='hideRightMenu'>
      <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/icon_hide.png' mode='widthFix'></image>
    </view>  
  </view>
  <view class='showRightMenuBtn' style="right:{{rightMenuShow ? '-80rpx' : '0'}}" bindtap='showRightMenu'>
    <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/icon_show_03.png' mode='widthFix'></image>
  </view>
  <button class='kefu' open-type="contact">
    <image src='http://xaxcx.17mall.cc/Public/uploadImages/default/kefu.png' mode='widthFix'></image>
    <text>客服</text>
  </button>
  <!-- <text class='iconfont icon-sousuo' style='width:50rpx; height:50rpx; color:red'>111</text> -->
</view>
