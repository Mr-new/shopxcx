/**index.wxss**/
.longtxt{
  width: 100%;
  height: auto;
  overflow: hidden;
}
/* .longtxt>image{
  width: 100%;
  display: block;
} */
.longtxtFooter{
  width: 96%;
  padding: 20rpx 2%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.longtxtFooter>view{
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.longtxtFooter>view:first-of-type,.longtxtFooter>view:nth-of-type(2){
  border-right: 2rpx solid #EAEAEA;
}
.longtxtFooter>view:first-of-type>text:first-of-type{
  font-size: 16pt;
  color: #373737;
}
.longtxtFooter>view:nth-of-type(2)>text:first-of-type{
  color: #E45452;
}
.longtxtFooter>view>text:last-of-type{
  font-size: 10pt;
  color: #333333;
  margin-left: 5rpx;
}

.longtxtFooter>view:last-of-type{
  width: 40%;
  justify-content: flex-start;
  padding-left: 20rpx;
}
.longtxtFooter>view:last-of-type>image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 2rpx;
  border-radius: 50%;
}
.footer{
  width: 94%;
  padding: 0 3% 120rpx;
  height: auto;
  overflow: hidden;
  border-top: 10rpx solid #F5F5F5;
  display: flex;
  flex-direction: column;
  /* margin-bottom: 220rpx; */
}
.footer>view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  align-items: center;
  padding: 15rpx 0;
}
.footer>view>text{
  font-size: 11pt;
  color: #333333;
}
.footer>view>view{
  width: 170rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #E45452;
  border-radius: 8rpx;
}
.footer>view>view>text{
  font-size: 11pt;
  color: #ffffff;
}
.footer>view>view>text:first-of-type{
  margin-right: 5rpx;
}
.fixed_bottom{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 15rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
}
.fixed_bottom>view{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.fixed_bottom>button{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0;
  border: none;
  background-color: transparent;
  line-height: 1.3;
}
.fixed_bottom>button::after{
  border: none;
}
.fixed_bottom>button>text:first-of-type{
  font-size: 13pt;
  color: #A2A2A2;
}
.fixed_bottom>button:last-of-type{
  font-size: 10pt;
  color: #A6A6A6;
}
.fixed_bottom>view>text:first-of-type{
  font-size: 14pt;
  color: #A2A2A2;
  margin-bottom: 5rpx;
}
.fixed_bottom>view>text:last-of-type{
  font-size: 10pt;
  color: #A6A6A6;
}
.fixed_bottom>view:last-of-type>text:first-of-type{
  font-size: 16pt;
  margin-bottom:0;
}
/* 暂无数据 */
.isNull{
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 150rpx;
}
.isNull>text:first-of-type{
  font-size: 26pt;
  color: #999999;
}
.isNull>text:last-of-type{
  font-size: 10pt;
  color: #666666;
  margin-top: 20rpx;
}
.rightMenu{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 464rpx;
  position: fixed;
  top: 50%;
  right: -80rpx;
  transition: 0.5s right;
  margin-top: -232rpx;
  background-color: rgba(0, 0, 0, 0.7);
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.rightMenu>view,.rightMenu>button{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.rightMenu>view>image,.rightMenu>button>image{
  width: 50%;
}
.rightMenu>view:last-of-type>image{
  width: 25%;
}
.showRightMenuBtn{
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.7);
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  position: fixed;
  right: 0;
  transition: 0.5s right;
  top: 50%;
  margin-top: 152rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.showRightMenuBtn>image{
  width: 25%;
}
button{
  margin: 0;
  padding: 0;
  background-color: transparent;
}
.line{
  width: 50rpx !important;
  height: 2rpx !important;
  background-color: #848484;
}