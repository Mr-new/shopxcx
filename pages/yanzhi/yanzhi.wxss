/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}
.container{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  background-color: #EC6073;
}
.plaColor{
  color: #F7CDD9;
}
.search{
  width: 710rpx;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.search>view:first-of-type{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  /* width: 15%; */
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 7rpx solid #F8D8DE;
}
.search>view:first-of-type>open-data{
  width: 100%;
  height: 100%;
}
.search>view:first-of-type>text:first-of-type{
  font-size: 12pt;
  color: #F19B48;
  margin-right: 5%;
}
.search>view:first-of-type>text:nth-of-type(2){
  font-size: 11pt;
  color: #999999;
}
.search>view:nth-of-type(2){
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 600rpx;
  height: 60rpx;
  background-color: #EE7D8E;
  border:2rpx solid #EE7D8E;
  border-radius: 30rpx;
}
.search>view:nth-of-type(2)>text{
  font-size: 14pt;
  color: #F5BDC6;
  margin: 0 2%;
}
.search>view:nth-of-type(2)>input{
  width: 90%;
  font-size: 10pt;
  color: #F7CDD9;
}
.navList{
  width: 92%;
  padding: 0 3%;
  height: 70rpx;
  /* border-bottom: 2rpx solid #DCDCDC; */
  padding-bottom: 10rpx;
}
.navList>scroll-view{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  white-space: nowrap;
}
.navItem{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  /* padding: 0 30rpx; */
  margin: 0 30rpx;
  height: 68rpx;
  font-size: 10pt;
  color: #FFFFFF;
}
.selected{
  color: #FFFFFF;
  font-weight: bold;
  font-size: 11pt;
  border-bottom: 6rpx solid #ffffff;
  box-sizing: border-box;
}
.caseList{
  width: 100%;
  height: 84%;
}
.ListWrap{
  width: 50%;
  float: left;
}
.listItem{
  display: flex;
  width: 94%;
  margin: 15rpx 3%;
  flex-direction: column;
  border-radius: 15rpx;
  height: auto;
  overflow: hidden;
  background-color: #ffffff;
  /* float: left; */
  
}
.listItem>image{
  width: 100%;
}
.listItem>text{
  font-size: 10pt;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  line-height: 38rpx;
  height: 60rpx;
  padding: 15rpx 4%;
  margin-bottom: 15rpx;
  font-weight: bold;
}
.itemBottom{
  width: 92%;
  padding: 0 4%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.itemBottom>view:first-of-type{
  width: 65%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.itemBottom>view:first-of-type>image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.itemBottom>view:first-of-type>text{
  width: 60%;
  font-size: 9pt;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.itemBottom>view:last-of-type{
  width: 35%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.itemBottom>view:last-of-type>text:last-of-type{
  font-size: 10pt;
  margin-left: 4rpx;
  color: #666666;
}


/* 暂无数据 */
.isNull{
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}
.isNull>text:first-of-type{
  font-size: 26pt;
  color: #999999;
}
.isNull>text:last-of-type{
  font-size: 10pt;
  color: #666666;
  margin-top: 20rpx;
}
/* 到底提示 */
.isButtom{
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  /* clear: both; */
  width: 100%;
}
.isButtom>text{
  font-size: 10pt;
  color: #888888;
}
/* 问答 */
.askListWrap{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.askItem{
  width: 94%;
  padding: 30rpx 3%;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}
.askItem>view:first-of-type{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}

.askItem>view:first-of-type>text{
  display:-webkit-box; 
  overflow:hidden; 
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  font-size: 13pt;
  color: #333333;
  line-height: 50rpx;
  font-weight: bold;
}
.wen{
  font-size: 10pt;
  color: #ffffff;
  margin: 0;
  padding: 0;
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx !important;
  text-align: center;
  background-color: #FE6B27;
  border-radius: 7rpx;
  margin-right: 10rpx;
}
.askItem>view:nth-of-type(2){
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
}
.askItem>view:nth-of-type(2)>text{
  display:-webkit-box; 
  overflow:hidden; 
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
  font-size: 11pt;
  color: #5B5B5B;
  line-height: 40rpx;
}
.da{
  font-size: 10pt;
  color: #ffffff;
  margin: 0;
  padding: 0;
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx !important;
  text-align: center;
  background-color: #24C7AB;
  border-radius: 7rpx;
  margin-right: 10rpx;
}
.askItem>view:last-of-type{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.askItem>view:last-of-type>view>text{
  font-size: 10pt;
  color: #848484;
}
.askItem>view:last-of-type>view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.icon-chakan{
  font-size: 16pt !important;
  margin-right: 10rpx;
  color: #C3C3C3;
}
.imgWrap{
  width: 100%;
  height: auto;
  overflow: hidden;
  position: relative;
}
.imgWrap>image{
  display: block;
  width: 100%;
}
.imgWrap>view{
  width: 90%;
  height: auto;
  overflow: hidden;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 99;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.imgWrap>view>text{
  padding: 5rpx 15rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 8pt;
  border-radius: 20rpx;
}
.imgWrap>view>image{
  display: block;
  width: 130rpx;
  border-top: 4rpx solid #ffffff;
  border-left: 4rpx solid #ffffff;
  border-top-left-radius: 10rpx;
}
/* 手机号码授权弹框 */
.telAuthor{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
  background-color: rgba(0,0,0,0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}
.telAuthor>view{
  width: 400rpx;
  height: 200rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 20rpx 0 30rpx;
}
.telAuthor>view>text{
  font-size: 40pt;
  color: #51C332;
  margin-bottom: 10rpx;
}
.telAuthor>view>button{
  width: 280rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: rgba(0, 0, 0, 0);
  border: 2rpx solid #51876F;
  color: #51876F;
  font-size: 12pt;
  margin: 0;
  padding: 0;
  outline: none;
}
.telAuthor>view>button::after{
  border: none;
  outline: none;
}